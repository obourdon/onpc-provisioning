# {{ ansible_managed }}
- local_loop:
    name: image0
- partitioning:
    base: image0
    label: mbr
    partitions:
      - name: root
        type: '0x8E'
        flags: [ boot,primary ]
        size: {{ root_part_size_gb | default(50) }}G
- lvm:
    name: lvm
    base: [ root ]
    pvs:
      - name: pv
        base: root
        options: [ "--force" ]
    vgs:
      - name: vg
        base: [ "pv" ]
        options: [ "--force" ]
    lvs:
      - name: lv_root
        base: vg
        extents: {{ root_fs_size_percent | default(30) }}%VG
      - name: lv_tmp
        base: vg
        extents: {{ tmp_fs_size_percent | default(10) }}%VG
      - name: lv_var
        base: vg
        extents: {{ var_fs_size_percent | default(35) }}%VG
      - name: lv_log
        base: vg
        extents: {{ log_fs_size_percent | default(20) }}%VG
      - name: lv_home
        base: vg
        extents: {{ home_fs_size_percent | default(5) }}%VG
- mkfs:
    name: fs_root
    base: lv_root
    type: {{ root_fs_type | default('xfs') }}
    label: "img-rootfs"
    mount:
      mount_point: /
      fstab:
        options: "rw,relatime"
        fck-passno: 1
- mkfs:
    name: fs_tmp
    base: lv_tmp
    type: {{ tmp_fs_type | default('xfs') }}
    mount:
      mount_point: /tmp
      fstab:
        options: "rw,nosuid,nodev,noexec,relatime"
- mkfs:
    name: fs_var
    base: lv_var
    type: {{ var_fs_type | default('xfs') }}
    mount:
      mount_point: /var
      fstab:
        options: "rw,relatime"
- mkfs:
    name: fs_log
    base: lv_log
    type: {{ log_fs_type | default('xfs') }}
    mount:
      mount_point: /var/log
      fstab:
        options: "rw,relatime"
- mkfs:
    name: fs_home
    base: lv_home
    type: {{ home_fs_type | default('xfs') }}
    mount:
      mount_point: /home
      fstab:
        options: "rw,nodev,relatime"
